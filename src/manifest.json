{
  "manifest_version": 3,
  "name": "CodePTIT Copier",
  "version": "1.10",
  "description": "Sửa lỗi dòng trống thừa khi Copy trên CodePTIT. Tự động tạo File nhập sẵn Testcase trong VS Code. Hỗ trợ Nộp bài nhanh từ Clipboard",
  "author": "nvbangg (https://github.com/nvbangg)",
  "homepage_url": "https://chromewebstore.google.com/detail/codeptit-copier/ncckkgpgiplcmbmobjlffkbaaklohhbo",

  "permissions": ["storage"],

  "action": {
    "default_title": "CodePTIT Copier",
    "default_popup": "popup/popup.html"
  },

  "host_permissions": ["http://localhost:27121/*"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://code.ptit.edu.vn/*", "https://db.ptit.edu.vn/*"],
      "css": ["style.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://db.ptit.edu.vn/exercise", "https://db.ptit.edu.vn/exercise/"],
      "js": ["db-list.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
